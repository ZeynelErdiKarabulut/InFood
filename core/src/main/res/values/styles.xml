<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorAquaHaze</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorSilver</item>
        <item name="android:windowBackground">@color/colorAquaHaze</item>
    </style>

    <!-- End of application theme. -->


    <!-- TextView styles. -->

    <style name="TextView.Medium" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="TextView.SemiBold" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/raleway_semi_bold</item>
    </style>

    <style name="TextView.Toolbar" parent="TextView.SemiBold">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="TextView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="fontFamily">@font/raleway_semi_bold</item>
    </style>

    <style name="TextView.Title.Section" parent="TextView.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="fontFamily">@font/raleway_semi_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.075</item>
    </style>

    <!-- End of TextView styles. -->


    <!-- Button styles. -->

    <style name="Button.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="iconTint">@color/colorBoulder</item>
        <item name="iconSize">24dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Button.TextButton.Category" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- End of Button styles. -->


    <!-- Toolbar styles. -->

    <style name="AppBar.Default" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Toolbar.Default" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="titleTextAppearance">@style/TextView.Toolbar</item>
    </style>

    <!-- End of Toolbar styles. -->


    <!-- CardView styles. -->

    <style name="CardView.FilledBox" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorAquaHaze</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/colorGallery</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- End of CardView styles. -->


    <!-- SearchView styles. -->

    <style name="SearchView.Default" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@null</item>
        <item name="searchIcon">@drawable/ic_outline_search_24</item>
    </style>

    <!-- End of SearchView styles. -->


    <!-- Chip styles. -->

    <style name="Chip.Default" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipStrokeColor">@color/colorGallery</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- End Chip styles. -->
</resources>